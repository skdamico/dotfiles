## git
alias g="git"
alias gs="git status"
alias gsu="git submodule sync && git submodule update --init --recursive"

alias f="ack -R --all-types --smart-case"

alias rb="git fetch origin; review-branch --tracking-branch origin/master"
alias rb-force="git fetch origin; review-branch -f --tracking-branch origin/master"

smash() { ec2-ssh -r us-west-1 stefano@$1; }

alias work="cd ~/dev/www && aws-creds shell seatme && source env/bin/activate"
alias smsh="aws-creds shell seatme"

alias be="bundle exec"

alias docker-cleanup="docker run -v /var/run/docker.sock:/var/run/docker.sock -v /var/lib/docker:/var/lib/docker --rm martin/docker-cleanup-volumes"

alias flush-redis="docker exec www_redis_1 redis-cli -c 'FLUSHALL'"

alias test-dorsia="xcodebuild -workspace SeatMe.xcworkspace -scheme Dorsia -sdk iphonesimulator -destination 'platform=iOS Simulator,name=iPad 2,OS=latest' clean test | xcpretty"
